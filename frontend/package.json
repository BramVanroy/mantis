{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "bootstrap": "^5.1.3",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.4",
    "react-dom": "^17.0.2",
    "react-router-bootstrap": "^0.26.0",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0"
  },
  "scripts": {
    "start:js": "react-scripts start",
    "build:js": "react-scripts build",
    "build": "npm-run-all --parallel build:*",
    "build:css": "sass src/styles/:src/styles/ --style=compressed",
    "watch:css": "npm run build:css && sass src/styles/:src/styles/ --watch --poll",
    "start": "npm-run-all --parallel watch:css start:js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint:es": "eslint --fix --ext .js,.jsx src/",
    "lint:style": "stylelint --fix src/**/*.scss",
    "lint": "npm-run-all --parallel lint:*"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "google"
    ],
    "rules": {
      "no-unused-vars": "off",
      "linebreak-style": "off",
      "max-len": "off",
      "require-jsdoc": "off",
      "sort-imports": [
        "error",
        {
          "ignoreCase": true,
          "ignoreDeclarationSort": false,
          "ignoreMemberSort": false,
          "memberSyntaxSortOrder": [
            "none",
            "all",
            "multiple",
            "single"
          ],
          "allowSeparatedGroups": false
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.5.0",
    "eslint-config-google": "^0.14.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.45.1",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0"
  }
}
